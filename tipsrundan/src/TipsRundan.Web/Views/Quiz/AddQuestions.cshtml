@model List<TipsRundan.Web.Models.QuestionView> //Lista av QuestionViewModel för att skicka data till vyn

@for (int i = 0; i < Model.Count; i++) // for-loop som loopar igenom alla frågor i listan i model.
{
    <div class="form-group">
        <label asp-for="@Model[i].Inquiry">Question @i</label> <!-- inmatningsfält användaren kan skriva frågan. -->
        <input asp-for="@Model[i].Inquiry" class="form-control" />   <!-- Skapar själva inmatningsfältet -->
        
        <!-- Här kan du lägga till fält för svarsalternativ -->
        <label>Options</label>  <!-- Text som visar bredvid inmatningsfältet -->  <!-- Text som visar bredvid inmatningsfältet, options -->
        @for (int j = 0; j < Model[i].Options.Count; j++) // Loopar igenom alla svarsalternativ i listan för frågan.
        {
            <input asp-for="@Model[i].Options[j]" class="form-control" /> <!-- inmatningsfält användaren kan skriva svarsalternativ. -->
        }
    </div>
}